@{
    ViewBag.Title = "ShowHistory";
}
@using SimchaFund.Models;
@using SimchaFund.Data;
@model ShowHistoryViewModel
<div class="row">
    <h1 class="col-md-6 col-md-offset-3">History For @Model.ContributorName</h1>
</div>
<div class="row">
    <h3 class="col-md-4 col-md-offset-4">Balance @Model.Balance.ToString("C")</h3>
</div>

<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>Transaction</th>
        <th>Date</th>
        <th>Amount</th>
    </tr>

    @{
        foreach (ShowHistoryProperties sHP in Model.History)
        {
            <tr>
                <td>@sHP.Name</td>
                <td>@sHP.Date</td>
                <td>@sHP.Amount.ToString("C")</td>
            </tr>
        }
    }
</table>


